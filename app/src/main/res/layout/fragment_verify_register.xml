<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.VerifyRegisterFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/_20sdp"
      android:layout_marginEnd="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_20sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/black_border_bg">
      <TextView
          android:id="@+id/tvNamee"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Name "
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:paddingStart="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"/>

      <TextView
          android:id="@+id/tvName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="abc"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvNamee"
          android:paddingStart="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          />
      <ImageButton
          android:id="@+id/imgNameApprove"
          android:layout_width="@dimen/_30sdp"
          android:layout_height="@dimen/_30sdp"
          android:gravity="center"
          android:paddingStart="@dimen/_10sdp"
          android:paddingEnd="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/untick_icon"
          android:scaleType="fitXY"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/consName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/black_border_bg"
        android:layout_marginTop="@dimen/_15sdp">
      <TextView
          android:id="@+id/tvMob"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Mobile "
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:paddingStart="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"/>

      <TextView
          android:id="@+id/tvMobile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="abc"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvMob"
          android:paddingStart="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          />
      <ImageButton
          android:id="@+id/imgMobileApprove"
          android:layout_width="@dimen/_30sdp"
          android:layout_height="@dimen/_30sdp"
          android:gravity="center"
          android:paddingStart="@dimen/_10sdp"
          android:paddingEnd="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/untick_icon"
          android:scaleType="fitXY"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/consMob"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/black_border_bg"
        android:layout_marginTop="@dimen/_15sdp">
      <TextView
          android:id="@+id/station"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Station "
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:paddingStart="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"/>

      <TextView
          android:id="@+id/tvstation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="abc"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/station"
          android:paddingStart="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          />
      <ImageButton
          android:id="@+id/imgStationApprove"
          android:layout_width="@dimen/_30sdp"
          android:layout_height="@dimen/_30sdp"
          android:gravity="center"
          android:paddingStart="@dimen/_10sdp"
          android:paddingEnd="@dimen/_10sdp"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/untick_icon"
          android:scaleType="fitXY"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApprove"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/radious_bg"
        android:backgroundTint="@color/green"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="Approve"
        android:textSize="@dimen/_13sdp"
        android:textColor="#ffffff"
      app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnReject"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReject"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/radious_bg"
        android:backgroundTint="@color/red"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="Reject"
        android:textSize="@dimen/_13sdp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/btnApprove"
        app:layout_constraintRight_toRightOf="parent"
        />


  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

   <!-- <data>
        <variable
            name="UserCountResItem"
            type="com.sunitawebapp.admin_giriexp.retrofit.models.Response.UserCountResItem" />
    </data>-->

         <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
             android:layout_marginStart="@dimen/_20sdp"
             android:layout_marginEnd="@dimen/_20sdp"
             android:layout_marginTop="@dimen/_20sdp">


                 <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/consTotalManager"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_60sdp"
                    app:layout_constraintTop_toTopOf="parent"
                     android:background="@drawable/black_border_bg"
                    >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Total Managers:"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:paddingStart="@dimen/_15sdp"
                      android:textColor="@color/black"/>
                     <TextView
                         android:id="@+id/tvManagers"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                          android:textColor="@color/black"
                         android:textStyle="bold"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         android:paddingEnd="@dimen/_15sdp"/>
                 </androidx.constraintlayout.widget.ConstraintLayout>
                 <androidx.constraintlayout.widget.ConstraintLayout
                     android:id="@+id/consTotalEmp"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_60sdp"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:background="@drawable/black_border_bg"
                     app:layout_constraintTop_toBottomOf="@id/consTotalManager"
                  app:layout_constraintStart_toStartOf="parent"
                     android:layout_marginTop="@dimen/_10sdp">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Total Employee:"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         android:paddingStart="@dimen/_15sdp"
                         android:textColor="@color/black"/>
                     <TextView
                         android:id="@+id/tvExployee"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black"
                         android:textStyle="bold"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         android:paddingEnd="@dimen/_15sdp"/>
                 </androidx.constraintlayout.widget.ConstraintLayout>
             <androidx.constraintlayout.widget.ConstraintLayout
                 android:id="@+id/consTotalIC"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_60sdp"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:background="@drawable/black_border_bg"
                 app:layout_constraintTop_toBottomOf="@id/consTotalEmp"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="@dimen/_10sdp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Total IC:"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     android:paddingStart="@dimen/_15sdp"
                     android:textColor="@color/black"/>
                 <TextView
                     android:id="@+id/tvIC"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black"
                     android:textStyle="bold"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:paddingEnd="@dimen/_15sdp"/>
             </androidx.constraintlayout.widget.ConstraintLayout>
             <androidx.appcompat.widget.AppCompatButton
                 android:id="@+id/btnLogin"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@drawable/radious_bg"
                 android:backgroundTint="@color/logo_color"
                 android:layout_marginTop="@dimen/_30sdp"
                 android:text="Verify Registration"
                 android:textSize="@dimen/_13sdp"
                 android:textColor="#ffffff"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 android:layout_marginBottom="@dimen/_20sdp"
                 />
         </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
